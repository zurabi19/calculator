<?xml version="1.0" encoding="utf-8"?>





<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00355c"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"
                android:onClick="onclick"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"

                android:onClick="onclick"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"

                android:onClick="onclick"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F67280"
                android:gravity="center"
                android:onClick="operationClick"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"

                android:onClick="onclick"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"

                android:onClick="onclick"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"
                android:onClick="onclick"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F67280"
                android:gravity="center"
                android:onClick="operationClick"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView

                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"
                android:onClick="onclick"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"
                android:onClick="onclick"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"
                android:onClick="onclick"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F67280"
                android:gravity="center"
                android:onClick="operationClick"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"
                android:onClick="dotclick"
                android:text="."
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"
                android:onClick="onclick"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#F8B295"
                android:gravity="center"
                android:onClick="delete"
                android:text="DEL"
                android:textColor="@color/black"
                android:textSize="32sp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.25"
                android:background="#6C5B7B"
                android:gravity="center"
                android:onClick="equalsClick"
                android:text="="
                android:textColor="@color/white"
                android:textSize="32sp">

            </TextView>

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"


            android:layout_weight="0.5"
            android:background="#F67280"
            android:gravity="center"
            android:onClick="cleartxt"
            android:text="CLEAR"
            android:textColor="@color/black"
            android:textSize="32sp">

        </TextView>

        <TextView

            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:background="#F67280"
            android:gravity="center"
            android:onClick="operationClick"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="32sp">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="52sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>